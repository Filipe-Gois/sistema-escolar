@{
    ViewData["Title"] = "Principal";

    @if (ViewBag.NomeProfessor == null)
    {
        <a asp-controller="Login">Login</a>
    }
    else
    {
        <div class="w-100 h-auto d-flex justify-content-end mt-5">

            <button class="btn btn-light border border-primary text-primary" data-bs-toggle="modal" data-bs-target="#cadastrarTurma" type="submit">
                Cadastrar Turma
            </button>
        </div>

        <table class="table">
            <thead>

                <tr>
                    <th scope="col">Número</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var turma in Model)
                {
                    <tr>
                        <td>@turma.TurmaId</td>
                        <td>@turma.Nome</td>
                        <td>

                            <div style="display:flex">
                                @{
                                    var name = "deletarTurma" + turma.TurmaId;
                                }
                                <button type="submit" class="text-danger bg-transparent border-0 btn-link bg-white" data-bs-toggle="modal" data-bs-target="	#@name">
                                    Excluir
                                </button>
                            </div>
                        </td>

                        <td>
                            <div style="display:flex">

                                <form asp-controller="Atividade" asp-action="Index">
                                    <input name="turmaId" value="@turma.TurmaId" type="hidden" />
                                    <button class="btn btn-link text-success" type="submit">Visualizar</button>
                                </form>
                            </div>
                        </td>

                    </tr>

                    @* Modal Deletar *@
                    <div class="modal" tabindex="-1" id="@name">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Deseja excluir turma ?</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form asp-controller="Professor" asp-action="ExcluirTurma">
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                        <input type="hidden" name="turmaId" value="@turma.TurmaId" />
                                        <button type="submit" class="btn btn-primary">Confirmar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                }
            </tbody>

        </table>

        @if (TempData["Mensagem"] != null)
        {
            <p style="color:red">@TempData["Mensagem"]</p>
        }

        <div class="modal" tabindex="-1" role="dialog" id="cadastrarAtividade">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Cadastrar Atividade</h2>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form asp-controller="Atividade" asp-action="CadastrarAtividade">
                        <div class="modal-body">

                            <label class="form-label">Nome da Atividade</label>
                            <input type="text" name="nomeAtividade" class="form-control" placeholder="nome" required />
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Confirmar</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>

    }
}